---
import InstagramLink from './InstagramLink.astro';

const year = new Date().getFullYear();
---

<footer class="border-t-2 border-accent mt-16">
  <div class="max-w-6xl mx-auto px-6 py-10 flex flex-col items-center gap-4 text-sm text-gray-500">
    <div class="flex items-center gap-6">
      <!-- Instagram -->
      <InstagramLink class="group flex items-center gap-2 transition-colors" ariaLabel="Instagram" label="@olga_b_draws" />

    

      <!-- Redbubble Shop -->
      <a
        href="https://www.redbubble.com/people/olga-b-draws/shop"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 hover:text-primary transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
        </svg>
        <span>Shop on Redbubble</span>
      </a>
    </div>

    <p class="flex items-center gap-1">
      <span>&copy; {year} Olga B. Draws. All rights reserved.</span>
      <span class="text-yellow-400" aria-hidden="true">ðŸ’›</span>
    </p>
  </div>
</footer>
