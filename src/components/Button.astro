---
export interface Props {
  variant?: 'primary' | 'outline';
  href?: string;
  type?: 'button' | 'submit';
  class?: string;
}

const { variant = 'primary', href, type = 'button', class: className = '' } = Astro.props;

const baseClasses =
  'inline-block px-6 py-3 rounded-lg font-heading font-semibold text-sm tracking-wide transition-all duration-200 hover:shadow-md hover:scale-[1.02] cursor-pointer text-center';

const variantClasses = {
  primary: 'bg-accent text-black hover:bg-yellow-300',
  outline: 'border-2 border-primary text-primary hover:bg-primary hover:text-white',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
